{
  "name": "macrotools-app",
  "version": "0.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && electron .\"",
    "dev": "node dev.js",
    "electron-build": "ng build --configuration production && electron-builder",
    "electron-pack": "ng build --configuration production && electron-builder --dir",
    "build-electron": "tsc -p electron/tsconfig.json",
    "watch-electron": "tsc -p electron/tsconfig.json --watch",
    "postinstall": "electron-builder install-app-deps"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.10",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.2.10",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "pdf-lib": "^1.17.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.1.4",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.7.2",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.macrotools.app",
    "productName": "MacroTools App",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/macrotool/**/*",
      "dist/electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
